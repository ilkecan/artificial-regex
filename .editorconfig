# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

curly_bracket_next_line = false
spaces_around_brackets = outside
spaces_around_operators = true

# shfmt
space_redirects = true # -sr
